<%= render 'header'%>

<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @courses.each do |course| %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <%= image_tag(course.image_url,
            class: 'bd-placeholder-img card-img-top',
            width: "100%", height:"225", role:"img",
            preserveAspectRatio: "xMidYMid slice",
            focusable: "false")%>
            <p class="card-text">
              <div><%= course.title%></div>
              <div><%= truncate(strip_tags(course.description), length:80)%></div>
              <div>Credit: <%= course.credit%></div>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to '详情', course_path(course) , class: 'btn btn-sm btn-outline-secondary' %>
              </div>
              <small class="text-body-secondary"></small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "New course", new_course_path %>
